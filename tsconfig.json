{
  "version": "2.8.2",
  "compilerOptions": {
    "rootDir": "./",
    "target": "es2017",
    "alwaysStrict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "pretty": true,
    "plugins": [{ "name": "tslint-language-service" }],
    "typeRoots": ["./node_modules/@types", "./node_modules"],
    "types": ["node", "mocha"],
    "lib": ["es7", "es2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": ["./node_modules"],
  "compileOnSave": true,
  "watch": true
}
